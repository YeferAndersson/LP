# .env.example
# Copia este archivo como .env y personaliza los valores

# Información personal del aniversario
ANNIVERSARY_START_DATE=2023-06-13
ANNIVERSARY_PARTNER_NAME=Mi Amor
ANNIVERSARY_YOUR_NAME=Tu Nombre
ANNIVERSARY_YEARS=2

# URLs de música romántica (opcional)
ROMANTIC_SONG_1_URL=/audio/romantic-song-1.mp3
ROMANTIC_SONG_2_URL=/audio/romantic-song-2.mp3
ROMANTIC_SONG_3_URL=/audio/romantic-song-3.mp3

# Configuración de la aplicación
APP_TITLE="Nuestro Segundo Aniversario"
APP_DESCRIPTION="Una página especial para celebrar nuestro amor"
APP_URL=https://nuestro-aniversario.netlify.app

# Configuración de animaciones
ANIMATION_DURATION_FAST=300
ANIMATION_DURATION_NORMAL=600
ANIMATION_DURATION_SLOW=1200

# Configuración de efectos
ENABLE_CURSOR_TRAIL=true
ENABLE_PARTICLE_EFFECTS=true
ENABLE_SOUND_EFFECTS=true
ENABLE_BACKGROUND_MUSIC=false

# Configuración de colores (opcional)
PRIMARY_COLOR=#f43f5e
SECONDARY_COLOR=#ec4899
ACCENT_COLOR=#a855f7

# Configuración de desarrollo
DEV_HOST=localhost
DEV_PORT=3000

# Configuración de producción
BUILD_OUTDIR=dist
BUILD_FORMAT=directory