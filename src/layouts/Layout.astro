<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Nuestro Segundo Aniversario ❤️</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
    
    <!-- Import Motion components -->
    <div id="motion-components-container">
      <!-- Motion components will be initialized here -->
    </div>
    
    <!-- Scroll progress indicator -->
    <div class="scroll-progress">
      <div class="scroll-progress-bar" id="scroll-progress-bar"></div>
    </div>
    
    <!-- Twinkling stars background -->
    <div class="twinkling-stars" id="twinkling-stars">
      <!-- Stars will be generated by JavaScript -->
    </div>
    
    <!-- Floating hearts background -->
    <div id="floating-hearts" class="fixed inset-0 pointer-events-none z-0">
      <!-- Hearts will be generated by JavaScript -->
    </div>
    
    <!-- Scroll indicator -->
    <div id="scroll-indicator" class="fixed bottom-8 left-1/2 transform -translate-x-1/2 z-50">
      <div class="animate-bounce">
        <svg class="w-6 h-6 text-rose-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </div>
    
    <!-- Music control -->
    <button id="music-toggle" class="fixed top-6 right-6 z-50 bg-rose-500/20 backdrop-blur-sm border border-rose-300/30 rounded-full p-3 text-rose-200 hover:bg-rose-500/30 transition-all duration-300">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
      </svg>
    </button>
  </body>
</html>

<style is:global>
  @import "tailwindcss";

  @theme {
    /* Fuentes personalizadas */
    --font-sans: "Inter", system-ui, sans-serif;
    --font-cursive: "Dancing Script", cursive;
    
    /* Colores románticos personalizados */
    --color-romantic-50: #fef2f4;
    --color-romantic-100: #fde6e9;
    --color-romantic-200: #fbd0d9;
    --color-romantic-300: #f7aab9;
    --color-romantic-400: #f27a93;
    --color-romantic-500: #ea546c;
    --color-romantic-600: #d83454;
    --color-romantic-700: #b91c3c;
    --color-romantic-800: #9b1439;
    --color-romantic-900: #851336;
    
    /* Colores de ensueño */
    --color-dreamy-50: #faf7ff;
    --color-dreamy-100: #f4edff;
    --color-dreamy-200: #ebe0ff;
    --color-dreamy-300: #dbc7ff;
    --color-dreamy-400: #c4a1ff;
    --color-dreamy-500: #a855f7;
    --color-dreamy-600: #9333ea;
    --color-dreamy-700: #7c3aed;
    --color-dreamy-800: #6b21a8;
    --color-dreamy-900: #581c87;
    
    /* Breakpoints personalizados */
    --breakpoint-xs: 475px;
    --breakpoint-3xl: 1600px;
    
    /* Espaciado personalizado */
    --spacing-18: 4.5rem;
    --spacing-112: 28rem;
    --spacing-128: 32rem;
    
    /* Funciones de timing personalizadas */
    --ease-romantic: cubic-bezier(0.25, 0.46, 0.45, 0.94);
    --ease-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);
    --ease-smooth: cubic-bezier(0.4, 0, 0.2, 1);
    --ease-elastic: cubic-bezier(0.68, -0.6, 0.32, 1.6);
  }

  /* Animaciones personalizadas */
  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(5deg); }
  }

  @keyframes glow {
    from { box-shadow: 0 0 20px rgba(244, 63, 94, 0.4); }
    to { box-shadow: 0 0 40px rgba(244, 63, 94, 0.8), 0 0 60px rgba(244, 63, 94, 0.4); }
  }

  @keyframes heartbeat {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  @keyframes bounce-gentle {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  @keyframes sparkle {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  @keyframes gradient-shift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  @keyframes romantic-pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
  }

  /* Utilidades personalizadas con @utility */
  @utility text-gradient {
    background: linear-gradient(135deg, #f43f5e, #ec4899, #a855f7);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @utility text-gradient-animated {
    background: linear-gradient(45deg, #f43f5e, #ec4899, #a855f7, #3b82f6, #06b6d4, #10b981, #f59e0b, #ef4444);
    background-size: 400% 400%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradient-shift 4s ease infinite;
  }

  @utility glass-romantic {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  @utility text-shadow-romantic {
    text-shadow: 
      0 0 10px rgba(244, 63, 94, 0.5), 
      0 0 20px rgba(244, 63, 94, 0.3);
  }

  @utility animate-float {
    animation: float 6s ease-in-out infinite;
  }

  @utility animate-glow {
    animation: glow 2s ease-in-out infinite alternate;
  }

  @utility animate-heartbeat {
    animation: heartbeat 1.5s ease-in-out infinite;
  }

  @utility animate-bounce-gentle {
    animation: bounce-gentle 2s ease-in-out infinite;
  }

  @utility animate-sparkle {
    animation: sparkle 3s linear infinite;
  }

  @utility animate-romantic-pulse {
    animation: romantic-pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    background: linear-gradient(45deg, #1a1a2e, #16213e, #0f0f23);
    background-size: 400% 400%;
    animation: gradient-shift 15s ease infinite;
    color: #f8fafc;
    margin: 0;
    overflow-x: hidden;
    font-family: var(--font-sans);
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.1);
  }

  ::-webkit-scrollbar-thumb {
    background: linear-gradient(180deg, #f43f5e, #ec4899);
    border-radius: 4px;
  }

  .heart-shape {
    width: 20px;
    height: 18px;
    position: relative;
  }

  .heart-shape:before,
  .heart-shape:after {
    content: '';
    width: 12px;
    height: 19px;
    position: absolute;
    left: 10px;
    transform: rotate(-45deg);
    background: #f43f5e;
    border-radius: 12px 12px 0 0;
    transform-origin: 0 100%;
  }

  .heart-shape:after {
    left: 0;
    transform: rotate(45deg);
    transform-origin: 100% 100%;
  }

  /* Scroll progress indicator */
  .scroll-progress {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: rgba(244, 63, 94, 0.2);
    z-index: 1000;
  }

  .scroll-progress-bar {
    height: 100%;
    background: linear-gradient(90deg, #f43f5e, #ec4899, #a855f7);
    width: 0%;
    transition: width 0.1s ease;
  }

  /* Twinkling stars */
  .star {
    position: absolute;
    background: white;
    border-radius: 50%;
    animation: twinkle 3s infinite;
  }

  @keyframes twinkle {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.2); }
  }

  /* Enhanced mobile responsiveness */
  @media (max-width: 768px) {
    .timeline-item {
      margin-bottom: 2rem;
    }
    
    .timeline-item .flex {
      flex-direction: column;
      align-items: center;
    }
    
    .timeline-item .w-1\/2 {
      width: 100%;
      padding: 0;
      margin-top: 1rem;
    }
    
    .timeline-icon {
      position: relative !important;
      transform: none !important;
      margin-bottom: 1rem;
    }
    
    #timeline-line {
      display: none;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }

  /* Print styles */
  @media print {
    body {
      background: white !important;
      color: #333 !important;
    }
    
    .timeline-line {
      background: #333 !important;
    }
    
    .text-gradient {
      color: #333 !important;
      -webkit-text-fill-color: #333 !important;
    }
  }
</style>